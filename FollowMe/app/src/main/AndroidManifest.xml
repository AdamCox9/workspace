<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.adamcox.followme"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="8" />

    <uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.RECORD_AUDIO" />

    <uses-feature android:name="android.hardware.camera"></uses-feature>  
   
    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".FollowMeActivity" android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="com.adamcox.followme.TextEntryActivity">
        </activity>
        <activity android:name="com.adamcox.followme.PictureEntryActivity">
        </activity>
        <activity android:name="com.adamcox.followme.AudioEntryActivity">
        </activity>
        <activity android:name="com.adamcox.followme.VideoEntryActivity">
        </activity>
        
    </application>
</manifest>