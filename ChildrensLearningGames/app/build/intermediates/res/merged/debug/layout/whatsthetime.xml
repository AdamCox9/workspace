<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
	<TableLayout
        android:id="@+id/ButtonsTable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30sp"
        android:orientation="horizontal">
	    <TableRow 
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content" 
	        android:id="@+id/upButtons">
	        <ImageView 
		        android:contentDescription="@string/icon_up"
	            android:id="@+id/upHourImage" 
	            android:layout_width="wrap_content" 
	            android:layout_height="wrap_content" 
	            android:src="@drawable/clockup">
	        </ImageView>
	        <TextView></TextView>
	        <ImageView 
		        android:contentDescription="@string/icon_up"
	            android:id="@+id/upMinuteImage" 
	            android:layout_width="wrap_content" 
	            android:layout_height="wrap_content" 
	            android:src="@drawable/clockup">
	        </ImageView>
	    </TableRow>
	    <TableRow 
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content" 
	        android:id="@+id/digitRow">
	        <TextView 
	            android:padding="5dip" 
		        android:layout_width="wrap_content" 
		        android:layout_height="wrap_content" 
	            android:textColor="#FF0000"
	            android:id="@+id/hours" 
	            android:textAppearance="?android:attr/textAppearanceLarge"
	            android:layout_gravity="right"
	            android:text="@string/number_twelve" 
	            android:textSize="100sp">
	        </TextView>
	        <TextView 
	            android:padding="5dip" 
		        android:layout_width="wrap_content" 
		        android:layout_height="wrap_content" 
	            android:textColor="#FF0000"
	            android:id="@+id/semicolon" 
	            android:textAppearance="?android:attr/textAppearanceLarge" 
	            android:text="@string/semicolon" 
	            android:textSize="75sp">
	        </TextView>
	        <TextView 
	            android:padding="5dip" 
		        android:layout_width="wrap_content" 
		        android:layout_height="wrap_content" 
	            android:textColor="#FF0000"
	            android:id="@+id/minutes" 
	            android:textAppearance="?android:attr/textAppearanceLarge" 
	            android:text="@string/double_zero" 
	            android:textSize="100sp">
	        </TextView>
	    </TableRow>
	    <TableRow 
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content" 
	        android:layout_gravity="center_horizontal"
	        android:id="@+id/downButtons">
	        <ImageView 
		        android:contentDescription="@string/icon_down"
	            android:id="@+id/downHourImage" 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" 
	            android:src="@drawable/clockdown">
	        </ImageView>
	        <TextView></TextView>
	        <ImageView 
		        android:contentDescription="@string/icon_down"
	            android:id="@+id/downMinuteImage" 
	            android:layout_width="wrap_content" 
	            android:layout_height="wrap_content" 
	            android:src="@drawable/clockdown">
	        </ImageView>
   	    </TableRow>
	    <TableRow 
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content" 
	        android:id="@+id/descRow">
	        <TextView 
	            android:padding="5dip" 
		        android:layout_width="wrap_content" 
		        android:layout_height="wrap_content" 
	            android:textColor="#FF0000"
	            android:id="@+id/display_hours" 
	            android:textAppearance="?android:attr/textAppearanceLarge" 
	            android:text="@string/hours" 
	            android:textSize="30sp">
	        </TextView>
	        <TextView>
	        </TextView>
	        <TextView 
	            android:padding="5dip" 
		        android:layout_width="wrap_content" 
		        android:layout_height="wrap_content" 
	            android:textColor="#FF0000"
	            android:id="@+id/display_minutes" 
	            android:textAppearance="?android:attr/textAppearanceLarge" 
	            android:text="@string/minutes" 
	            android:textSize="30sp">
	        </TextView>
	    </TableRow>
	</TableLayout>
</LinearLayout>
